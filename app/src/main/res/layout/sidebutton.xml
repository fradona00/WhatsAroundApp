    <ImageView
        android:id="@+id/imgbtn"
        android:src="@drawable/plusicon"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
    </ImageView>

</RelativeLayout>